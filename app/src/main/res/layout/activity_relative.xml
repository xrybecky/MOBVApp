<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonRel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tlacidlo 1"
        />
    <Button
        android:id="@+id/buttonRel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRel1"
        android:text="Tlacidlo 2"
        />
    <Button
        android:id="@+id/buttonRel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonRel2"
        android:layout_alignTop="@id/buttonRel2"
        android:text="Tlacidlo 3"
        />
    <Button
        android:id="@+id/buttonRel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonRel2"
        android:layout_below="@id/buttonRel3"
        android:text="Tlacidlo 4"
        />
    <Button
        android:id="@+id/buttonRel5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Tlacdlo 5"
        />
</RelativeLayout>